<main class="profile">
    <section class="profile__goBack">
        <a class="profile__goBackBtn" href="/chatList.html"></a>
    </section>
    <section class="profile__container">
        <label for="avatar" class="avatar profile__avatar">
            <input type="file" id="avatar" name="avatar" hidden/>
        </label>
        <h1 class="profile__title">{{name}}</h1>
        <form name="profileData_form">

            <ul class="profile__fields">
                <li class="profile__fieldsItem">{{{InputTextProfile  id="login" name=name type="text" placeholder=loginValue
                                                                     classInput="" classLabel="" label="Логин"
                                                                     errorMessage=''
                                                                     disabled=true }}}</li>

                <li class="profile__fieldsItem">{{{InputTextProfile  id="name" name=name type="text" placeholder=firstNameValue
                                                                     classInput="" classLabel="" label="Имя"
                                                                     errorMessage=''
                                                                     disabled=true }}}</li>
                <li class="profile__fieldsItem">{{{InputTextProfile  id="secondName" name=secondName type="text"
                                                                     placeholder=secondNameValue
                                                                     classInput="" classLabel="" label="Фамилия"
                                                                     errorMessage=''
                                                                     disabled=true }}}</li>
                <li class="profile__fieldsItem">{{{InputTextProfile  id="displayName" name=displayName type="text"
                                                                     placeholder=displayNameValue
                                                                     classInput="" classLabel="" label="Имя в чате"
                                                                     errorMessage=''
                                                                     disabled=true }}}</li>
                <li class="profile__fieldsItem">{{{InputTextProfile  id="email" name=email type="text" placeholder=emailValue
                                                                     classInput="" classLabel="" label="Почта"
                                                                     errorMessage='' value=emailValue
                                                                     disabled=true }}}</li>
                <li class="profile__fieldsItem">{{{InputTextProfile  id="phone" name=phone type="text" placeholder="Телефон"
                                                                     value=phoneValue
                                                                     classInput="" classLabel="" label="Телефон"
                                                                     errorMessage=errorPhoneMessage value=phoneValue
                                                                     disabled=true}}}</li>

            </ul>

        </form>


            <ul class="profile__fields">
                <li class="profile__btnList">{{{ButtonLink  text="Изменить данные" classNames=""  id="changeBtn"
                                                               onClick=onChangeClick}}}</li>
                <li class="profile__btnList">{{{ButtonLink  text="Изменить пароль" classNames="" id="changeBtn"
                                                               onClick=onChangePasswClick}}}</li>
                <li class="profile__btnList">{{{ButtonLink  text="Выйти" classNames="buttonLink_red" id="outBtn"
                                                               onClick=onOutClick}}}</li>
            </ul>



    </section>
</main>
