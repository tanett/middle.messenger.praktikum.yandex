<div class="{{styles.inputBlock}}">
  <p class="{{styles.inputBlock__label}} {{classLabel}}">{{label}}</p>
  {{{Input
    id=id
    name=name
    type=type
    placeholder=placeholder
    classInput=styles.inputBlock__input
    value=value
    onInput=onInput
    disabled=disabled
    onChange=onChange
    pattern=pattern
  }}}
  <p class="{{styles.inputBlock__message}}">{{errorMessage}}</p>

</div>
