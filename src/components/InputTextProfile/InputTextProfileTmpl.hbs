<div class="{{styles.inputBlockProfile}}">
  <div class="{{styles.inputBlockProfile__wrapper}}">
    <p class="{{styles.inputBlockProfile__label}} {{classLabel}}">{{label}}</p>
    {{{Input
      id=id
      name=name
      type=type
      placeholder=placeholder
      classInput=styles.inputBlockProfile__input
      value=value
      onInput=onInput
      disabled=disabled
      onChange=onChange
      pattern=pattern
    }}}
  </div>
  <p id="id-errorMsg" class="{{styles.inputBlockProfile__message}}">{{errorMessage}}</p>

</div>
